<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bookstore</title>
    <link href='https://fonts.googleapis.com/css?family=Press Start 2P' rel='stylesheet'>
    <link rel="stylesheet" href="assets/rpgui.min.css">
    <link rel="stylesheet" href="assets/style.css">
</head>

<body>
    <div class="rpgui-content rpgui-cursor-default" style="overflow-y:scroll">
        <div id="container">
            <div id="main"></div>
            <div class="inner rpgui-container framed-golden" style="position:relative">
                <header>
                    <h2>Available Books</h2>
                </header>
                <div class="rpgui-center" style="position:relative">
                    <table>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Price</th>
                            <th>Cover</th>
                            <th>Purchase</th>
                        </tr>
                        <% for (var book of books) { %>
                            <tr>
                                <td>
                                    <%= book.title %>
                                </td>
                                <td>
                                    <%= book.author %>
                                </td>
                                <td>
                                    <%= book.price %>
                                </td>
                                <td>
                                    <img src="img/<%- book.id%>.png" height="100px" width="80px" />
                                </td>
                                <td>
                                    <% if (!ownedBooks.includes(book.id.toString())) { %>
                                        <form action="/purchase" method="post" id="purchaseForm">
                                            <input type="hidden" name="bookID" value="<%-book.id%>" />
                                        </form>
                                        <button type="submit" form="purchaseForm" value="purchase"
                                            class="rpgui-button">Purchase</button>
                                        <% } else { %>
                                            <p>Already Owned!</p>
                                            <% } %>
                                </td>
                            </tr>
                            <% } %>
                    </table>
                </div>
                <br>
                <br>
                <a href="/books">View your books</a>
            </div>
        </div>
    </div>
    <script src="assets/rpgui.min.js"></script>

</body>

</html>